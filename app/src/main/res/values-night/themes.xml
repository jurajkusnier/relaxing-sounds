<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RelaxingSounds" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_700</item>
        <item name="colorPrimaryVariant">@color/indigo_900</item>
        <item name="colorPrimaryDark">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_purple_200</item>
        <item name="colorSecondaryVariant">@color/deep_purple_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowBackground">?colorSurface</item>
        <!-- Customize your theme here. -->
    </style>
</resources>